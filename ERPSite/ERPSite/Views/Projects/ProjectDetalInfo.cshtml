            <dt>
                @Html.DisplayNameFor(model => model.Files)
            </dt>

            <dd>
                @for (int i = 0; i < Model.Files.Count(); i++)
                {
                    <a href="/Projects/LoadFile?fileId=@Model.Files[i].Id" target="_blank">@Model.Files[i].FileName</a>
                    <br />
                }
            </dd>

        </dl>
    </div>
<p>
    @Html.ActionLink("Редактировать", "ProjectDetalInfoEdit", new { id = Model.ID })<br />
