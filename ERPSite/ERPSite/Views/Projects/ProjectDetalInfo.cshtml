            <dd>
                @Html.DisplayFor(model => model.Start)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.End)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.End)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProjectTypeName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProjectTypeName)
            </dd>



            <dt>
                @Html.DisplayNameFor(model => model.ProjectsSkills)
            </dt>

            <dd>
                @for (int i = 0; i < Model.ProjectsSkills.Count(); i++)
                {
                    @Html.DisplayFor(model => model.ProjectsSkills[i].Name, "Name")
